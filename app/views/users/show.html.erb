<div class="container offset-1">
  <h2 class="amber-text text-accent-3"> <%= @user.first_name %></h2>
  <div class="row">
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="http://www.how-to-draw-cartoons-online.com/image-files/how-to-draw-a-heart.gif" height="250" width="42">
        </div>
        <div class="card-content blue darken-2">
          <span class="card-title activator amber-text text-accent-3">Click for more Info about <%= @user.first_name%><i class="material-icons right">more_vert</i></span>
          <p class="back-to-index"><%= link_to 'Back to all users', users_path %></p>
          <p> Total Likes: <%= @user.votes %></p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">User information<i class="material-icons right">close</i></span>
          <p>First name: <%= @user.first_name %></p>
          <p>Last name:<%= @user.last_name %></p>
        </div>
      </div>
          <% @interests.each do |interest|  %>
            <span class="amber-text text-accent-3">Profession:  <%= interest.profession %></p>
            <span class="amber-text text-accent-3">Hobbies:  <%= interest.hobbies %></p>
            <span class="amber-text text-accent-3">Kids:  <%= interest.kids %></p>
            <span class="amber-text text-accent-3">Likes to Party: <%= interest.party %></p>
          <% end %>
    </div>
  </div>
  <br />


  <div class="row">
    <span id='upvote' class="waves-effect waves-light btn"><%=link_to 'Like', upvote_path(params[:id]) %></span>
    <span id='downvote' class="waves-effect waves-light btn"><%=link_to 'Unlike', downvote_path(params[:id]) %></span>
  </div>

</div>
